
@using WebAppMyTienda.Models.Class;
@model List<tbl_Ligas>

@{
    ViewBag.Title = "Index";
    ViewBag.titulo = "Ligas";
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formLigas", enctype = "multipart/form-data" }))
            {
                <div class="x_title">
                    <h2>@ViewBag.titulo<small>&nbsp;</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">

                                <table id="tbl_table_ligas" class="table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <td>Descripción</td>
                                            <td>Editar</td>
                                            <td>Eliminar</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (tbl_Ligas item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.NombreLigas
                                                </td>
                                                <td>
                                                    <a class="btn btn-success">Editar</a>
                                                
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="3"></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>
