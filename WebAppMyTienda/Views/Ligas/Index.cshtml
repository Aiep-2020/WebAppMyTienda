
@using WebAppMyTienda.Models.DTOs;
@model List<tbl_ligasDTO>

@{
    ViewBag.Title = "Index";
    ViewBag.titulo = "Ligas";
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">

                <div class="x_title">
                    <h2>@ViewBag.titulo<small>&nbsp;</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                        <div class="row">
                            <div class="form-group">
                                <a asp-controller="Ligas" asp-action="Create" class="btn btn-info">Agregar Ligas</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="tbl_table_ligas" class="table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <td>Descripción</td>
                                                <td>Editar</td>
                                                <td>Eliminar</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (tbl_ligasDTO item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.NombreLigas
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Ligas" asp-action="Edit" asp-route-id="@item.idliga"><div class="btn btn-success">Editar</div></a>

                                                    </td>
                                                    <td>
                                                        <a asp-controller="Ligas" asp-action="Delete" asp-route-id="@item.idliga"><div class="btn btn-danger">Delete</div></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th colspan="3"></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
    </div>
</div>
<div class="clearfix"></div>
