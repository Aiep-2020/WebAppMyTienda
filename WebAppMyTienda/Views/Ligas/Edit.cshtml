
@using WebAppMyTienda.Models.DTOs;
@model tbl_ligasDTO
@{
    ViewBag.Title = "Edit";
    ViewBag.titulo = "Edit Liga";
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <form asp-action="Edit" method="post">
                <div class="x_title">
                    <h2>@ViewBag.titulo<small>&nbsp;</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div id="ligas_summary" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="x_content">
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="NombreLigas" class="control-label">Nombre</label>
                            <div>
                                <input asp-for="NombreLigas" type="text" class="form-control" />
                                <span asp-validation-for="NombreLigas" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="clearfix"></div>
